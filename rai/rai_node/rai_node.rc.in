#include <windows.h>

#define VER_FILEVERSION ${CPACK_PACKAGE_VERSION_MAJOR},${CPACK_PACKAGE_VERSION_MINOR},${CPACK_PACKAGE_VERSION_PATCH},0
#define VER_FILEVERSION_STR "${CPACK_PACKAGE_VERSION_MAJOR}.${CPACK_PACKAGE_VERSION_MINOR}.${CPACK_PACKAGE_VERSION_PATCH}"

LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US

VS_VERSION_INFO VERSIONINFO
    FILEVERSION VER_FILEVERSION
    PRODUCTVERSION VER_FILEVERSION
    FILEFLAGSMASK VS_FFI_FILEFLAGSMASK
#ifdef _DEBUG
    FILEFLAGS VS_FF_DEBUG
#else
    FILEFLAGS 0
#endif
    FILEOS VOS_NT_WINDOWS32
    FILETYPE VFT_APP
    FILESUBTYPE VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName", "${CPACK_PACKAGE_VENDOR}"
            VALUE "ProductName", "${CPACK_PACKAGE_NAME}"
            VALUE "FileDescription", "${CPACK_PACKAGE_DESCRIPTION}"
            VALUE "FileVersion", VER_FILEVERSION_STR
            VALUE "ProductVersion", VER_FILEVERSION_STR
            VALUE "InternalName", "rai_node"
            VALUE "OriginalFilename", "rai_node.exe"
            VALUE "LegalCopyright", "${PROJECT_COPYRIGHT}"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
END
